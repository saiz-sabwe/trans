{% extends 'base.html.twig' %}

{% block title %}Dernières opérations{% endblock %}

{% block body %}

    <main class="main" id="top">
        <div class="container my-4">
            <div class="card">
                <div class="card-header border-bottom">
                    <div class="row flex-between-end">
                        <div class="col-auto align-self-center">
                            <h5 class="mb-0">Mes Opérations récentes</h5>
                            <p class="mb-0 pt-1 mt-2">Voici un aperçu de vos opérations récentes.</p>
                        </div>
                    </div>
                </div>
                <div class="card-body pt-4">

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>Montant</th>
                                <th>Description</th>
                                <th>Date de création</th>
                                <th>Statut</th>
                                <th class="text-end">Date de clôture</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for operation in operations %}
                                <tr>
                                    <td>{{ operation.id }}</td>
                                    <td class="text-end">{{ operation.amount }}</td>
                                    <td>{{ operation.description }}</td>
                                    <td>{{ operation.dateCreated ? operation.dateCreated|date('d/m/Y H:i') : 'N/A' }}</td>
                                    <td>
                                        {% if operation.closedStatus == 200 %}
                                            <span class="badge bg-success">Terminé ✓</span>
                                        {% else %}
                                            <span class="badge bg-primary">Processing ⟳</span>
                                        {% endif %}
                                    </td>
                                    <td class="text-end">{{ operation.dateClosed ? operation.dateClosed|date('d/m/Y H:i') : 'N/A' }}</td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="6" class="text-center">Aucune opération trouvée.</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </main>

{% endblock %}

