{% extends 'base.html.twig' %}

{% block title %}Dernières opérations {{ parent() }} {% endblock %}


    {% block body %}



        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Buttons example</h4>
                        <p class="card-title-desc">The Buttons extension for DataTables provides a common set of
                            options, API methods and styling to display buttons on a page that will interact with a
                            DataTable. The core library provides the based framework upon which plug-ins can built.
                        </p>

                        <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap"
                               style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>Montant</th>
                                <th>Description</th>
                                <th>Date de création</th>
                                <th>Statut</th>
                                <th class="text-end">Date de clôture</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for operation in operations %}
                                <tr>
                                    <td>{{ operation.id }}</td>
                                    <td class="text-end">{{ operation.amount }}</td>
                                    <td>{{ operation.description }}</td>
                                    <td>{{ operation.dateCreated ? operation.dateCreated|date('d/m/Y H:i') : 'N/A' }}</td>
                                    <td>
                                        {% if operation.closedStatus == 200 %}
                                            <span class="badge rounded-pill bg-success">Terminé</span>
                                        {% else %}
                                            <span class="badge rounded-pill bg-info">En cours</span>
                                        {% endif %}
                                    </td>
                                    <td class="text-end">{{ operation.dateClosed ? operation.dateClosed|date('d/m/Y H:i') : 'N/A' }}</td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="6" class="text-center">Aucune opération trouvée.</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- end col -->
        </div>
        <!-- end row -->



    {% endblock %}



